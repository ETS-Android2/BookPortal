<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/global_background"
    tools:context=".SellActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"

            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <EditText
            android:id="@+id/book_name"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/global_buttons"
            android:ems="10"

            android:hint="Book Name"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:textColor="#FFF"
            android:textColorHint="#c1c1c1"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/author_name"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:background="@drawable/global_buttons"
            android:ems="10"

            android:hint="Author"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:textColor="#FFF"
            android:textColorHint="#c1c1c1"
            android:textSize="20dp" />

        <EditText

            android:id="@+id/description"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:background="@drawable/description_background"
            android:ems="10"

            android:gravity="top"
            android:hint="Description"
            android:inputType="textPersonName"
            android:paddingLeft="25dp"
            android:paddingTop="10dp"
            android:textColor="#FFF"
            android:textColorHint="#c1c1c1"
            android:textSize="20dp" />
        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="50dp"
                android:id="@+id/textOff"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Please select an Image"
                android:textColor="#fff"
                android:textSize="20dp" />

            <ImageButton
                android:layout_marginLeft="30dp"
                android:id="@+id/button_choose_image"
                android:layout_width="71dp"
                android:layout_height="66dp"
                android:background="#00ffffcc"
                app:srcCompat="@drawable/ic_baseline_camera_24" />

        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/button_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/submit_button"

            android:text="Submit"
            android:textColor="#FFF"
            android:textSize="20dp" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_circle"
        android:layout_width="125dp"
        android:layout_height="154dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>