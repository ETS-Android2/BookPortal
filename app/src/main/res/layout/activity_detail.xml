<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/global_background"

    tools:context=".DetailActivity">

    <ProgressBar
        android:id="@+id/progress_circle"
        android:layout_width="125dp"
        android:layout_height="154dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/home_toolbaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#656255"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <LinearLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_gravity="center"

                android:id="@+id/book_img_det"
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:layout_height="179dp"
                android:layout_marginTop="20dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/book_name_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="20sp"
                android:text="item" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/author_name_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#fff" />



        </LinearLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/book_des_det"
            android:background="#B7ADC6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"


            android:text="Lamborghini car prices start(GST Included) at Rs 2.99 Cr for the most inexpensive model in its lineup, the Huracan. The most expensive car in Lamborghini's lineup is the Aventador, priced at Rs. 6.25 Cr for its top variant. In total, Lamborghini has 4 models on sale in India. The Lamborghini Urus, Lamborghini Aventador, Lamborghini Huracan are amongst the most popular cars in their respective segments. Upcoming Lamborghini cars in India include the ."/>



        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="callOperation"
                android:background="@android:color/darker_gray"
                android:text="Call" />

            <Button

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="sendWhatsApp"
                android:background="@color/colorPrimary"
                android:text="Whatsapp Msg"
                android:textColor="@android:color/white"
               />




        </LinearLayout>

        <Button
            android:layout_marginTop="30dp"
            android:layout_gravity="center"

            android:id="@+id/delBtn"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:onClick="deleteAction"
            android:text="Delete Button" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>